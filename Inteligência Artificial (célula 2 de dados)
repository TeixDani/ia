def get_response_2(mensagem):
    msg = mensagem.lower().strip()
    for chave in respostas_variadas_2:
        if chave in msg:
            return random.choice(respostas_variadas_2[chave])
    return "Desculpa, não entendi. Pode repetir?"

output.register_callback('notebook.get_response_2', get_response_2)
