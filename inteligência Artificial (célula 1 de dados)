# Treinamento do modelo
vectorizer = CountVectorizer()
X = vectorizer.fit_transform(exemplos)
y = np.arange(len(exemplos))
model = MultinomialNB()
model.fit(X, y)

# Função de resposta
def responder(mensagem):
    entrada = vectorizer.transform([mensagem])
    pred = model.predict(entrada)[0]
    return respostas[pred]

# Callback Colab (seguro para ambiente externo)
try:
    from google.colab import output

    def callback_responder(mensagem):
        return responder(mensagem)

    output.register_callback('notebook.get_response', callback_responder)

except Exception as e:
    print("Callback não registrado (fora do Google Colab ou erro):", e)
